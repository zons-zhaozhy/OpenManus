[bandit]
exclude_dirs = [
    '.git',
    '__pycache__',
    'build',
    'dist',
    '*.egg-info',
    '.venv',
    '.tox',
    '.pytest_cache',
    '.coverage',
    'coverage_html',
    '.mypy_cache',
    '.vscode',
    '.idea',
    'tests'
]

# Skip test files
exclude = tests/*

# Tests to skip
skips = ['B101', 'B104', 'B110', 'B311', 'B404', 'B603']

[bandit.assert_used]
skips = ['*_test.py', 'test_*.py']
